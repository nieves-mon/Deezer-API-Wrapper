<div class="container-sm my-4">
    <div class="row justify-content-center">
        <div class="col-auto md-auto">
            <h1 class="text-center fs-1 fw-bold"><%= @playlist.title %></h1>
            <h3 class="text-center fs-3 fw-semibold">by <%= @playlist.creator["name"] %></h3>
            <img src="<%= @playlist.picture_big %>" class="img-thumbnail mx-auto d-block" alt="<%= @playlist.title %> big playlist picture">
        </div>
        <div class="col-auto md-auto">
            <p class="fs-5 fw-semibold fst-italic text-center"><%= @playlist.description %></p>
            <h2 class="fs-4 fw-semibold">Tracks</h2>
            <table class="table align-middle">
                <tbody>
                    <% @playlist.tracks.data.each_with_index do |track, i| %>
                        <tr>
                            <th scope="row"><%= i + 1 %></th>
                            <td class="fs-5"><%= link_to track.title, track_path(track.id) %></td>
                            <td>by <%= link_to track.artist.name, artist_path(track.artist.id) %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
