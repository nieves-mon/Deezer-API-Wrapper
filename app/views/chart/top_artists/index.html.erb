<div class="container-sm my-5">
    <h1 class="fw-bold fs-1 text-center">Top 10 Artists</h1>
    <table class="table align-middle">
        <tbody>
            <% @top_artists.each_with_index do |artist, i| %>
                <tr>
                    <th scope="row" class="fs-5">#<%= i + 1 %></th>
                    <td><img src="<%= artist.picture_small %>" class="img-thumbnail" alt="<%= artist.name %> small artist picture"></td>
                    <td class="fs-5 fw-semibold"><%= link_to artist.name, artist_path(artist.id)%></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
