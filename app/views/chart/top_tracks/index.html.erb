<div class="container-sm my-5">
    <h1 class="fw-bold fs-1 text-center">Top 10 Tracks</h1>
    <table class="table align-middle">
        <tbody>
            <% @top_tracks.each_with_index do |track, i| %>
                <tr>
                    <th scope="row" class="fs-5">#<%= i + 1 %></th>
                    <td><img src="<%= track.artist["picture_small"] %>" class="img-thumbnail" alt="<%= track.artist["name"] %> small artist picture"></td>
                    <td><%= link_to track.title, track_path(track.id), class: "fs-5 fw-semibold" %></td>
                    <td>by <%= link_to track.artist["name"], artist_path(track.artist["id"]) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
